.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box; }

text, button {
  font-family: Microsoft YaHei;
  font-size: 24rpx; }

.posts .post_container {
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 40rpx;
  background: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px; }
  .posts .post_container_author-data {
    margin: 10rpx 0 20rpx 10rpx; }
    .posts .post_container_author-data_author {
      width: 60rpx;
      height: 60rpx;
      vertical-align: middle; }
    .posts .post_container_author-data_data {
      font-size: 26rpx;
      margin: 0 0 5px 20rpx;
      vertical-align: middle; }
  .posts .post_container_title {
    vertical-align: middle;
    font-size: 34rpx;
    font-weight: bold;
    color: #333;
    margin: 0 0 10px 10px; }
  .posts .post_container_image {
    width: 100%;
    height: 340rpx; }
  .posts .post_container_content {
    color: #666;
    font-size: 28rpx;
    letter-spacing: 2rpx;
    padding: 10px;
    line-height: 20px; }
  .posts .post_container_like {
    font-size: 13px;
    flex-direction: column;
    line-height: 16px;
    padding: 0 10px; }
    .posts .post_container_like_image {
      width: 16px;
      height: 16px;
      margin-right: 8px;
      vertical-align: middle; }
    .posts .post_container_like_font {
      vertical-align: middle;
      margin-right: 20px; }

.index {
  background: #b3d4db;
  height: 100vh; }

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center; }
  .userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%; }
  .userinfo-nickname, .usermotto button {
    font-size: 32rpx;
    font-weight: bold;
    margin-top: 100rpx; }

.usermotto {
  margin-top: 200rpx; }
  .usermotto button {
    font-size: 22rpx;
    border: 2px solid #405f80;
    color: #405f80;
    width: 250rpx;
    height: 80rpx;
    line-height: 77rpx;
    margin: 0; }

.log-list {
  display: flex;
  flex-direction: column;
  padding: 40rpx; }

.log-item {
  margin: 10rpx; }

.posts swiper {
  height: 600rpx; }
  .posts swiper image {
    width: 100%;
    height: 600rpx; }

.posts-detail {
  display: flex;
  flex-direction: column; }
  .posts-detail_image {
    width: 100%;
    height: 460rpx; }
  .posts-detail_audio {
    width: 102rpx;
    height: 110rpx;
    position: absolute;
    left: 50%;
    margin-left: -51rpx;
    top: 180rpx;
    opacity: .6; }
  .posts-detail_author-date {
    flex-direction: row;
    margin: 20rpx 0 0 30rpx; }
    .posts-detail_author-date_avatar {
      width: 64rpx;
      height: 64rpx;
      vertical-align: middle; }
    .posts-detail_author-date_author {
      font-size: 30rpx;
      font-weight: 300;
      margin-left: 20rpx;
      vertical-align: middle;
      color: #666666; }
    .posts-detail_author-date_text {
      font-size: 24rpx;
      color: #999;
      margin-left: 20rpx; }
    .posts-detail_author-date_date {
      font-size: 24rpx;
      margin-left: 30rpx;
      vertical-align: middle;
      color: #999; }
  .posts-detail_title {
    margin-left: 40rpx;
    font-size: 36rpx;
    font-weight: 700;
    margin-top: 30rpx;
    letter-spacing: 2px;
    color: #4b556c; }
  .posts-detail_tool {
    margin-top: 20rpx; }
    .posts-detail_tool_circle-img {
      float: right;
      margin-right: 40rpx;
      vertical-align: middle; }
      .posts-detail_tool_circle-img image {
        width: 90rpx;
        height: 90rpx; }
      .posts-detail_tool_circle-img_share {
        margin-left: 30rpx; }
    .posts-detail_tool_horizon {
      width: 660rpx;
      height: 1px;
      background-color: #e5e5e5;
      vertical-align: middle;
      position: relative;
      top: 46rpx;
      margin: 0 auto;
      z-index: -99; }
  .posts-detail_detail {
    color: #666;
    margin-left: 30rpx;
    margin-top: 20rpx;
    margin-right: 30rpx;
    line-height: 44rpx;
    letter-spacing: 2px; }
