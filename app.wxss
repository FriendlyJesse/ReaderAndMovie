.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box; }

text, button {
  font-family: Microsoft YaHei; }

.posts .post_container {
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 40rpx;
  background: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px; }
  .posts .post_container_author-data {
    margin: 10rpx 0 20rpx 10rpx; }
    .posts .post_container_author-data_author {
      width: 60rpx;
      height: 60rpx;
      vertical-align: middle; }
    .posts .post_container_author-data_data {
      font-size: 26rpx;
      margin: 0 0 5px 20rpx;
      vertical-align: middle; }
  .posts .post_container_title {
    vertical-align: middle;
    font-size: 34rpx;
    font-weight: bold;
    color: #333;
    margin: 0 0 10px 10px; }
  .posts .post_container_image {
    width: 100%;
    height: 340rpx; }
  .posts .post_container_content {
    color: #666;
    font-size: 28rpx;
    letter-spacing: 2rpx;
    padding: 10px;
    line-height: 20px; }
  .posts .post_container_like {
    font-size: 13px;
    flex-direction: column;
    line-height: 16px;
    padding: 0 10px; }
    .posts .post_container_like_image {
      width: 16px;
      height: 16px;
      margin-right: 8px;
      vertical-align: middle; }
    .posts .post_container_like_font {
      vertical-align: middle;
      margin-right: 20px; }

.index {
  background: #b3d4db;
  height: 100vh; }

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center; }
  .userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%; }
  .userinfo-nickname, .usermotto button {
    font-size: 32rpx;
    font-weight: bold;
    margin-top: 100rpx; }

.usermotto {
  margin-top: 200rpx; }
  .usermotto button {
    font-size: 22rpx;
    border: 2px solid #405f80;
    color: #405f80;
    width: 250rpx;
    height: 80rpx;
    line-height: 77rpx;
    margin: 0; }

.log-list {
  display: flex;
  flex-direction: column;
  padding: 40rpx; }

.log-item {
  margin: 10rpx; }

.posts swiper {
  height: 600rpx; }
  .posts swiper image {
    width: 100%;
    height: 600rpx; }
